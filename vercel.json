{
    "version": 2,
    "trailingSlash": true,
    "cleanUrls": true,
    "headers": [
        {
            "source": "/(.*)\\.(css|js|mjs|png|jpg|jpeg|gif|webp|avif|svg|woff2)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        }
    ]
}